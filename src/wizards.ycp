{

textdomain "nfs";

import "Sequencer";
import "Wizard";

include "nfs/ui.ycp";

/**
 * Configuration of NFS client
 * without Read and Write
 * @return sequence result
 */
any MainSequence ()
{
    return FstabDialog ();
}

/**
 * Whole configuration of NFS client
 * @return sequence result
 */
any NfsSequence ()
{
    map aliases = $[
	"read"	: [ ``( ReadDialog () ), true ],
	"main"	:   ``( MainSequence () ),
	"write"	: [ ``( WriteDialog () ), true ]
    ];

    map sequence = $[
	"ws_start" : "read",
	"read" : $[
	    `abort	: `abort,
	    `next	: "main"
	],
	"main" : $[
	    `abort	: `abort,
	    `next	: "write"
	],
	"write" : $[
	    `abort	: `abort,
	    `next	: `next
	]
    ];

    Wizard::OpenOKDialog ();
    Wizard::SetDesktopIcon ("nfs");

    any ret = Sequencer::Run (aliases, sequence);

    UI::CloseDialog ();
    return ret;
}

/* EOF */
}
