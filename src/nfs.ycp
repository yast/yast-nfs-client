/***
 * <h3>Configuration of the nfs</h3>
 */

{

    textdomain "nfs";

    import "Nfs";
    import "Wizard";
    import "Popup";
    include "wizard/sequencer.ycp";
    include "nfs/ui.ycp";
    include "nfs/routines.ycp";

    map Aliases = $[
	"fstab"   : ``(FstabDialog ()),
//	"end"     : ``(SaveDialog ())
	];

    map Sequence = $[
	"ws_start"  : "fstab",
	"fstab"       : $[
	    `next   : `next,
	    `abort  : `abort
	    ],
/*
	"end"       : $[
	    `finish    : `ws_finish
	    ]
*/
	];

    if (!IsPortmapInstalled())
    {
	return;
    }

    Nfs::Read();

    Wizard::CreateDialog ();

    any result = WizardSequencer (Aliases, Sequence);

    if (result == `next)
    {
	if (Nfs::Write ())
	{
	    // message popup
	    /* #28322
	       No need to signal success. Failure has been signalled already.
	    Popup::Message (_("All the settings were written and are ready to use."));
	    */
	}
    }

    return UI::CloseDialog();
}
